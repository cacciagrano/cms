{
    "collectionName": "components_payment_apicredentials",
    "info": {
      "displayName": "API Credentials",
      "icon": "key",
      "description": "Credenciales de API para pasarelas de pago"
    },
    "options": {},
    "attributes": {
      "apiKey": {
        "type": "string",
        "private": true,
        "description": "Clave de API principal"
      },
      "apiSecret": {
        "type": "string",
        "private": true,
        "description": "Secreto de API"
      },
      "merchantId": {
        "type": "string",
        "description": "ID de comerciante"
      },
      "publicKey": {
        "type": "string",
        "description": "Clave pública para operaciones del lado del cliente"
      },
      "environment": {
        "type": "enumeration",
        "enum": [
          "sandbox",
          "production"
        ],
        "default": "sandbox",
        "description": "Entorno de la API"
      },
      "apiVersion": {
        "type": "string",
        "description": "Versión de la API utilizada"
      },
      "additionalCredentials": {
        "type": "json",
        "private": true,
        "description": "Credenciales adicionales específicas del proveedor"
      },
      "lastVerified": {
        "type": "datetime",
        "description": "Última vez que se verificaron las credenciales"
      },
      "isValid": {
        "type": "boolean",
        "default": false,
        "description": "Indica si las credenciales son válidas"
      }
    }
  }