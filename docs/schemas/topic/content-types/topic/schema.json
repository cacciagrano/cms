{
  "kind": "collectionType",
  "collectionName": "topic",
  "info": {
    "singularName": "topic",
    "pluralName": "topics",
    "displayName": "Topic",
    "description": "Temas generales para categorizar recursos",
    "collectionName": "topics"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "description": {
      "type": "text"
    },
    "icon": {
      "type": "string",
      "description": "Nombre del icono o clase CSS"
    },
    "color": {
      "type": "string",
      "default": "#3366cc"
    },
    "resources": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::resource.resource"
    }
  }
}
