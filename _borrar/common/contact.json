{
  "collectionName": "components_common_contacts",
  "info": {
    "displayName": "Contact",
    "icon": "phone",
    "description": "Información de contacto con validación mejorada"
  },
  "options": {},
  "attributes": {
    "email": {
      "type": "email",
      "description": "Correo electrónico de contacto",
      "minLength": 5,
      "maxLength": 100
    },
    "phone": {
      "type": "string",
      "description": "Número de teléfono fijo",
      "regex": "^[+]?[(]?[0-9]{3}[)]?[-\\s.]?[0-9]{3}[-\\s.]?[0-9]{4,6}$"
    },
    "mobile": {
      "type": "string",
      "description": "Número de teléfono móvil",
      "regex": "^[+]?[(]?[0-9]{3}[)]?[-\\s.]?[0-9]{3}[-\\s.]?[0-9]{4,6}$"
    },
    "website": {
      "type": "string",
      "description": "Sitio web personal o profesional",
      "regex": "^(https?:\\/\\/)?([\\da-z.-]+)\\.([a-z.]{2,6})([\\/\\w .-]*)*\\/?$"
    },
    "preferredContact": {
      "type": "enumeration",
      "enum": [
        "email",
        "phone",
        "mobile"
      ],
      "default": "email",
      "description": "Método de contacto preferido"
    },
    "contactHours": {
      "type": "string",
      "description": "Horario preferido para contacto (ej: 'Lunes a Viernes, 9am-5pm')"
    },
    "isVerified": {
      "type": "boolean",
      "default": false,
      "description": "Indica si la información de contacto ha sido verificada"
    }
  }
}