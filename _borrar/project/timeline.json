{
  "collectionName": "components_project_timeline",
  "info": {
    "displayName": "Project Timeline",
    "icon": "calendar",
    "description": "Cronograma y fases del proyecto"
  },
  "options": {},
  "attributes": {
    "phaseName": {
      "type": "string",
      "required": true,
      "description": "Nombre de la fase o etapa"
    },
    "startDate": {
      "type": "date",
      "description": "Fecha de inicio planificada"
    },
    "endDate": {
      "type": "date",
      "description": "Fecha de finalización planificada"
    },
    "actualStartDate": {
      "type": "date",
      "description": "Fecha de inicio real"
    },
    "actualEndDate": {
      "type": "date",
      "description": "Fecha de finalización real"
    },
    "description": {
      "type": "text",
      "description": "Descripción de las actividades en esta fase"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "not_started",
        "in_progress",
        "completed",
        "delayed",
        "cancelled"
      ],
      "default": "not_started",
      "description": "Estado actual de esta fase"
    },
    "dependencies": {
      "type": "json",
      "description": "Fases o actividades de las que depende esta fase"
    },
    "milestones": {
      "type": "json",
      "description": "Hitos importantes dentro de esta fase"
    }
  }
}